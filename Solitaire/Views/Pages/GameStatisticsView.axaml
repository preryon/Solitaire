<UserControl x:Class="Solitaire.Views.Pages.GameStatisticsView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:pages="clr-namespace:Solitaire.ViewModels.Pages"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             x:DataType="pages:GameStatisticsViewModel"
             x:CompileBindings="True"
             Cursor="Hand">
    <Design.DataContext>
        <pages:GameStatisticsViewModel />
    </Design.DataContext>

    <Grid 
        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
        ColumnDefinitions="3*,*"
        TextElement.Foreground="White" TextElement.FontSize="22">

        <!-- The Game Title. -->
        <TextBlock
            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"
            Text="{Binding GameName}" FontSize="36" Margin="0,0,0,20" />

        <!-- The game stats. -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Games Played" Margin="0,6" />
        <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Text="{Binding GamesPlayed}" Margin="0,6" />
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Games Won" Margin="0,6" />
        <TextBlock Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Right" Text="{Binding GamesWon}" Margin="0,6" />
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Games Lost" Margin="0,6" />
        <TextBlock Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right"  Text="{Binding GamesLost}" Margin="0,6" />
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Current Streak" Margin="0,6" />
        <TextBlock Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right"  Text="{Binding CurrentStreak}" Margin="0,6" />
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Highest Winning Streak" Margin="0,6" />
        <TextBlock Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right"  Text="{Binding HighestWinningStreak}" Margin="0,6" />
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Highest Losing Streak" Margin="0,6" />
        <TextBlock Grid.Row="6" Grid.Column="1" HorizontalAlignment="Right"  Text="{Binding HighestLosingStreak}" Margin="0,6" />
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Highest Score" Margin="0,6" />
        <TextBlock Grid.Row="7" Grid.Column="1" HorizontalAlignment="Right"  Text="{Binding HighestScore}" Margin="0,6" />
        <TextBlock Grid.Row="8" Grid.Column="0" Text="Cumulative Score" Margin="0,6" />
        <TextBlock Grid.Row="8" Grid.Column="1" HorizontalAlignment="Right"  Text="{Binding CumulativeScore}" Margin="0,6" />
        <TextBlock Grid.Row="9" Grid.Column="0" Text="Average Score" Margin="0,6" />
        <TextBlock Grid.Row="9" Grid.Column="1"  HorizontalAlignment="Right" Text="{Binding AverageScore}" Margin="0,6" />
        <TextBlock Grid.Row="10" Grid.Column="0" Text="Cumulative Time" Margin="0,6" />
        <TextBlock Grid.Row="10" Grid.Column="1"  HorizontalAlignment="Right" 
                   Text="{Binding CumulativeGameTime, Converter={StaticResource TimeSpanToShortStringConverter}}" Margin="0,6" />
        <TextBlock Grid.Row="11" Grid.Column="0" Text="Average Time" Margin="0,6" />
        <TextBlock Grid.Row="11" Grid.Column="1"  HorizontalAlignment="Right" 
                   Text="{Binding AverageGameTime, Converter={StaticResource TimeSpanToShortStringConverter}}" Margin="0,6" />
    </Grid>

</UserControl>