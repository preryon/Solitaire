<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Solitaire.ViewModels"
             xmlns:controls="clr-namespace:Solitaire.Controls"
             mc:Ignorable="d" d:DesignWidth="1080" d:DesignHeight="650"
             x:Class="Solitaire.Controls.DeckControls"
             x:DataType="viewModels:CardGameViewModel"
             Height="120"
             Width="700"
             ClipToBounds="False">
    
    <controls:TrayContainer x:Name="TrayContainer">
        <Grid ColumnDefinitions="Auto, Auto, *, Auto, Auto" 
              VerticalAlignment="Center"
              HorizontalAlignment="Stretch">
            
            <Button Grid.Column="0" FontSize="24" VerticalAlignment="Center" Margin="10,0,0,0"
                    Content="Undo"
                    Command="{Binding UndoCommand}" />

            <Button Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"
                    Content="Deal"
                    Command="{Binding NewGameCommand}" />

            <!-- Score, moves, and time display -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="20" 
                        VerticalAlignment="Center" HorizontalAlignment="Center">
                
                <Border Background="Black" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="SCORE" FontSize="24" Foreground="White" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding Score, Mode=OneWay, FallbackValue=0}" 
                                   FontSize="28" Foreground="Yellow" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
                
                <Border Background="Black" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="MOVES" FontSize="24" Foreground="White" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding Moves, Mode=OneWay, FallbackValue=0}" 
                                   FontSize="28" Foreground="Yellow" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
                
                <Border Background="Black" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="TIME" FontSize="24" Foreground="White" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ElapsedTime, Converter={StaticResource TimeSpanToShortStringConverter}, Mode=OneWay, FallbackValue='00:00'}" 
                                   FontSize="28" Foreground="Yellow" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <Button Grid.Column="3" VerticalAlignment="Center" Margin="0,0,10,0"
                    Content="Auto"
                    Command="{Binding AutoMoveCommand}" />

            <Button Grid.Column="4" VerticalAlignment="Center" Margin="0,0,10,0"
                    Content="Back"
                    Command="{Binding  NavigateToCasinoCommand}" />
        </Grid>
    </controls:TrayContainer>
</UserControl>
